# Muon generator validation run.
# Run the executable with `--geometry primitive` for the fastest setup
# when generating validation ntuples.

/analysis/setFileName B02
/analysis/ntuple/setFileName 0 B02ntuples
/analysis/ntuple/setFileName 1 B02ntuples

# Deterministic validation run (repeatable PDFs).
/runAction/useTimeSeed false
/runAction/useFixedSeeds true
/runAction/seed1 12345
/runAction/seed2 67890

# Use the cosmic muon spectrum (Smith & Duller) instead of a fixed energy.
/generator/SmithActivation true
/generator/useFixedEnergy false

/run/printProgress 1000
/run/verbose 1
/run/initialize
/run/beamOn 10000
